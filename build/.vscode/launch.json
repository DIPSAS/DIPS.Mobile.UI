{
  "version": "0.2.0",
  "configurations": [
      {
          "name": ".NET Script Debug",
          "type": "coreclr",
          "request": "launch",
          "program": "dotnet",
          "args": [
              "exec",
              "/usr/local/lib/dotnet-script/dotnet-script.dll",
              "${file}"
          ],
          "cwd": "${workspaceRoot}",
          "stopAtEntry": false
      }
  ]
}