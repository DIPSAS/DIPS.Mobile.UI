<dui:BottomSheet xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 x:Class="DIPS.Mobile.UI.Samples.Components.BottomSheets.Sheets.SimpleBottomSheetView"
                 WillClose="FirstBottomSheetView_OnWillClose"
                 DidClose="FirstBottomSheetView_OnDidClose"
                 >
    <Grid RowDefinitions="Auto, Auto">
        <dui:Label Grid.Row="0"
                   Text="My fancy content with two buttons"
                   HorizontalOptions="Center" />
        <Grid Grid.Row="1"
              HorizontalOptions="Center"
              ColumnDefinitions="Auto, Auto">
            <dui:Button Grid.Column="0"
                        Text="Action 1" />
            <dui:Button Grid.Column="1"
                        Text="Action 2" />
        </Grid>
    </Grid>
</dui:BottomSheet>