<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash theme -->
    <style name="DIPS.Mobile.UI.Style" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_primary_d_90</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/DIPS.Mobile.UI.PostStyle</item>
    </style>

    <!-- Base theme applied no matter what API -->
    <style name="DIPS.Mobile.UI.PostStyle" parent="Theme.MaterialComponents.DayNight">
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/color_primary_90</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_primary_d_90</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/color_primary_90</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="windowActionModeOverlay">true</item>

        <!-- Globally set the shape appearance of all material design components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DIPS.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DIPS.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DIPS.LargeComponent</item>
    </style>
</resources>