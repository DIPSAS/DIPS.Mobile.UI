<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:resourcesSamples="clr-namespace:Components.ResourcesSamples"
                 x:Class="Components.ResourcesSamples.Colors.ColorsSamples">
    <!-- <Grid RowDefinitions="Auto, *"> -->
    <!-- <dui:SearchBar Placeholder="Search by color name" TextChanged="InputView_OnTextChanged"/> -->
    <CollectionView Grid.Row="1"
                    Header="{Binding Source={RelativeSource AncestorType={x:Type dui:ContentPage}}, Path=AppTheme, StringFormat='Color Appearance: {0}'}"
                    SelectionMode="None"
                    ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type dui:ContentPage}}, Path=Colors}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Border Margin="{dui:Thickness size_2}"
                            WidthRequest="200"
                            HeightRequest="200"
                            Padding="2"
                            HorizontalOptions="Center"
                            StrokeThickness="1"
                            Stroke="{dui:Colors color_system_black}"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="{dui:CornerRadius size_2}" />
                        </Border.StrokeShape>

                        <Grid RowDefinitions="Auto,Auto, *"
                              RowSpacing="0">
                            <BoxView Grid.Row="0"
                                     HeightRequest="100"
                                     WidthRequest="197"
                                     BackgroundColor="{Binding Value}">
                            </BoxView>
                            <Line BackgroundColor="Black"
                                  HeightRequest="1"
                                  Grid.Row="1" />
                            <Label Grid.Row="2"
                                   Margin="{dui:Thickness size_2}"
                                   Text="{Binding Key}" />
                        </Grid>
                    </Border></Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    <!-- </Grid> -->
</dui:ContentPage>