<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:resourcesSamples="clr-namespace:Components.ResourcesSamples"
                 xmlns:helpers="clr-namespace:Components.Helpers"
                 xmlns:sizes="clr-namespace:Components.ResourcesSamples.Sizes"
                 xmlns:localizedStrings="clr-namespace:Components.Resources.LocalizedStrings"
                 x:Class="Components.ResourcesSamples.Sizes.SizesSamples">
    <dui:VerticalStackLayout Spacing="0">
        <dui:NavigationListItem Title="{x:Static localizedStrings:LocalizedStrings.SizesAsVisualBoxes}"
                                Command="{helpers:NavigationCommand {x:Type sizes:SizesAsVisualBoxes}}"
                                HasBottomDivider="True"
                                HasTopDivider="True"/>
        <dui:NavigationListItem Title="{x:Static localizedStrings:LocalizedStrings.SizesAsFontSize}"
                                Command="{helpers:NavigationCommand {x:Type sizes:SizesAsFontSize}}" 
                                HasBottomDivider="True"/>
    </dui:VerticalStackLayout>
</dui:ContentPage>