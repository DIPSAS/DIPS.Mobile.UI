<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:sheets="clr-namespace:Components.ComponentsSamples.BottomSheets.Sheets"
                 x:Class="Components.ComponentsSamples.BottomSheets.BottomSheetSamples">
    <VerticalStackLayout Padding="{dui:Sizes size_3}">
        <dui:Label>The buttons below can be tapped to test different types of content inside a bottom sheet.</dui:Label>
        <dui:Button Text="Single label"
                    Command="{dui:OpenBottomSheetCommand {x:Type sheets:SimpleBottomSheetView}}" />
        <dui:Button Text="List of items"
                    Command="{dui:OpenBottomSheetCommand {x:Type sheets:ListInBottomSheet}}" />
    </VerticalStackLayout>
</dui:ContentPage>