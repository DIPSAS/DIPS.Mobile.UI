<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:sheets="clr-namespace:Components.ComponentsSamples.BottomSheets.Sheets"
                 xmlns:componentsSamples="clr-namespace:Components.ComponentsSamples"
                 x:Class="Components.ComponentsSamples.BottomSheets.BottomSheetSamples">
    <dui:VerticalStackLayout>
        <dui:ListItem Title="Very simple bottom sheet"
                      dui:DUITouchEffect.Command="{dui:OpenBottomSheetCommand {x:Type sheets:SimpleBottomSheetView}}" />
        <dui:ListItem Title="Bottom sheet with a list of items"
                      dui:DUITouchEffect.Command="{dui:OpenBottomSheetCommand {x:Type sheets:ListInBottomSheet}}" />
    </dui:VerticalStackLayout>
</dui:ContentPage>