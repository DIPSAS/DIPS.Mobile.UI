<dui:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:sheets="clr-namespace:Components.ComponentsSamples.BottomSheets.Sheets"
                 x:Class="Components.ComponentsSamples.BottomSheets.Sheets.SimpleBottomSheetView">
    <dui:VerticalStackLayout Spacing="0"
                             BackgroundColor="Green">
    
            <BoxView HeightRequest="100"
                     BackgroundColor="Red"/>
    
            <ScrollView>
                <Grid Padding="{dui:Thickness Left=size_2, Right=size_2, Top=size_2}"
                      RowSpacing="{dui:Sizes size_2}">
    
                    <BoxView HeightRequest="100"
                             BackgroundColor="Red"/>
    
                    <BoxView HeightRequest="100"
                             BackgroundColor="Red"/>
    
                    <BoxView HeightRequest="100"
                             BackgroundColor="Red"/>
    
                    <BoxView HeightRequest="100"
                             BackgroundColor="Red"/>
    
                    <BoxView BackgroundColor="Transparent"
                             HeightRequest="1000" />
                </Grid>
            </ScrollView>
            
        </dui:VerticalStackLayout>
</dui:BottomSheet>