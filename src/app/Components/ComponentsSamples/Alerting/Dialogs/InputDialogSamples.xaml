<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             xmlns:localizedStrings="clr-namespace:Components.Resources.LocalizedStrings"
             x:Class="Components.ComponentsSamples.Alerting.Dialogs.InputDialogSamples"
             Padding="{dui:Sizes page_margin_medium}">
    
    <VerticalStackLayout>
        <dui:NavigationListItem Title="{x:Static localizedStrings:LocalizedStrings.DisplayInputDialogWithOneInputField}"
                                Tapped="OneInputField"
                                HasBottomDivider="True" />
        
        <dui:NavigationListItem Title="{x:Static localizedStrings:LocalizedStrings.DisplayInputDialogWithTwoInputFields}"
                                Tapped="TwoInputFields" />
    </VerticalStackLayout>
    
</dui:ContentPage>