<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="Components.ComponentsSamples.BarcodeScanning.BarcodeScanningResultBottomSheet"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:barcodeScanning="clr-namespace:DIPS.Mobile.UI.API.Camera.BarcodeScanning;assembly=DIPS.Mobile.UI"
                 x:DataType="{x:Type barcodeScanning:Barcode}">
    <dui:VerticalStackLayout>
        <dui:ListItem Title="Value">
            <dui:Label Text="{Binding RawValue}" />
        </dui:ListItem>
        <dui:ListItem Title="Format">
            <dui:Label Text="{Binding Format}" />
        </dui:ListItem>
    </dui:VerticalStackLayout>
</dui:BottomSheet>