<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:pickers="clr-namespace:Components.ComponentsSamples.Pickers"
                 x:Class="Components.ComponentsSamples.Pickers.PickersSample">
    <dui:ContentPage.BindingContext>
        <pickers:PickerSamplesViewModel />
    </dui:ContentPage.BindingContext>

    <dui:VerticalStackLayout>
        <dui:NavigationListItem Title="Item pickers"
                                Command="{Binding NavigateToItemPickersSamplesCommand}" />
        <dui:NavigationListItem Title="Date / time pickers"
                                Command="{Binding NavigateToDateTimePickersSamplesCommand}" />
    </dui:VerticalStackLayout>
</dui:ContentPage>