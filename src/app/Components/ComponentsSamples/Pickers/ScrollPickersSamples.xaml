                        <x:String>Ronaldo</x:String>
                    </x:Array>
                </dui:ScrollPicker.ItemsSource>
        
            </dui:ScrollPicker>
        </dui:ListItem>
        
    </dui:VerticalStackLayout>

</dui:ContentPage>