<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             x:Class="Components.ComponentsSamples.Tags.TagsSamples"
             Padding="{dui:Thickness Top=size_4, Left=size_3, Right=size_3}">
    
    <dui:VerticalStackLayout Spacing="{dui:Sizes size_2}">
        
        <dui:Tag Text="Default" 
                 Icon="{dui:Icons lock_fill}"/>
        
        <dui:Tag Style="{dui:Styles Tag=Danger}"
                 Text="Danger"
                 Icon="{dui:Icons alert_fill}" />
        
        <dui:Tag Style="{dui:Styles Tag=Subtle}"
                 Text="Subtle"
                 Icon="{dui:Icons update_available_fill}" />
        
        <dui:Tag Style="{dui:Styles Tag=Success}"
                 Text="Success"
                 Icon="{dui:Icons bell_line}" />
        
        <dui:Tag Style="{dui:Styles Tag=Warning}"
                 Text="Warning"
                 Icon="{dui:Icons bell_line}" />
        
        <dui:Tag Style="{dui:Styles Tag=Information}"
                 Text="Information"
                 Icon="{dui:Icons information_fill}" />
        
    </dui:VerticalStackLayout>
    
</dui:ContentPage>