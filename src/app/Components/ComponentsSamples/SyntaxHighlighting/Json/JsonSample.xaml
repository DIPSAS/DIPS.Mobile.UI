<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:json="clr-namespace:Components.ComponentsSamples.SyntaxHighlighting.Json"
                 xmlns:localizedStrings="clr-namespace:Components.Resources.LocalizedStrings"
                 x:Class="Components.ComponentsSamples.SyntaxHighlighting.Json.JsonSample"
                 x:DataType="{x:Type json:JsonSampleViewModel}">
    <dui:ContentPage.BindingContext>
        <json:JsonSampleViewModel />
    </dui:ContentPage.BindingContext>
    <Grid RowDefinitions="Auto, *">
        <dui:NavigationListItem Grid.Row="0"
                                Command="{Binding OpenJsonCommand, Mode=OneTime}"
                                Title="{x:Static localizedStrings:LocalizedStrings.SyntaxHighlighting_Json_See}" />
        <dui:Editor Grid.Row="1"
                    Text="{Binding Json}" />
    </Grid>
</dui:ContentPage>