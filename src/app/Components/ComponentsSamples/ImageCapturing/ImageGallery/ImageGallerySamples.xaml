<?xml version="1.0" encoding="utf-8"?>

<dui:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:imageGallery="clr-namespace:Components.ComponentsSamples.ImageCapturing.ImageGallery"
                 xmlns:gallery="clr-namespace:DIPS.Mobile.UI.API.Camera.Gallery;assembly=DIPS.Mobile.UI"
                 xmlns:dui="http://dips.com/mobile.ui"
                 x:Class="Components.ComponentsSamples.ImageCapturing.ImageGallery.ImageGallerySamples"
                 x:Name="This">

    <dui:ContentPage.BindingContext>
        <imageGallery:ImageGallerySamplesViewModel />
    </dui:ContentPage.BindingContext>

    <gallery:GalleryThumbnails Images="{Binding Images}"
                               CameraButtonTappedCommand="{Binding Source={x:Reference This}, Path=CameraButtonTappedCommand}" />

</dui:BottomSheet>