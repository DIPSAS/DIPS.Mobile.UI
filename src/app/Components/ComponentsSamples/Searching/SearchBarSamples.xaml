<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             xmlns:searching="clr-namespace:Components.ComponentsSamples.Searching"
             x:Class="Components.ComponentsSamples.Searching.SearchBarSamples"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             Padding="{dui:Sizes size_2}">
    <dui:ContentPage.BindingContext>
        <searching:SearchBarSamplesViewModel />
    </dui:ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <dui:SearchBar Grid.Row="0"
                   Placeholder="Search from the items below"
                   VerticalOptions="Start"
                   Text="{Binding FilterQuery}"
                   TextChanged="InputView_OnTextChanged" />
        <dui:ListView Grid.Row="1"
                      CornerRadius="15"
                      HasUnevenRows="True"
                      BackgroundColor="{dui:Colors color_neutral_05}"
                      SelectionMode="None"
                      ItemsSource="{Binding People}">
            <dui:ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <dui:Label Text="{Binding DisplayName}"
                                   VerticalOptions="Center"
                                   Margin="15" />
                    </ViewCell>
                </DataTemplate>
            </dui:ListView.ItemTemplate>
        </dui:ListView>
    </Grid>
</dui:ContentPage>