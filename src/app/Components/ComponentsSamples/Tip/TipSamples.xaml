<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="Components.ComponentsSamples.Tip.TipSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 Padding="{dui:Sizes size_3}">
    <Grid RowDefinitions="Auto, Auto, *">
        <dui:MultiLineInputField Grid.Row="0"
                                  x:Name="TipMessage"
                                  HeaderText="Tip message"
                                  Text="This is a shiny new feature you should use." />
        <dui:Button Text="Show tip"
                    Clicked="Button_OnClicked"
                    Grid.Row="1" />

        <dui:Button Text="Button with tip"
                    x:Name="ButtonWithTip"
                    Grid.Row="2"
                    VerticalOptions="Center" />
    </Grid>
</dui:ContentPage>