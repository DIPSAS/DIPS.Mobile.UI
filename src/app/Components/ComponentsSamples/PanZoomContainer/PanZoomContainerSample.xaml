<?xml version="1.0" encoding="utf-8" ?>
<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:localizedStrings="clr-namespace:Components.Resources.LocalizedStrings"
                 xmlns:panZoomContainer="clr-namespace:DIPS.Mobile.UI.Components.PanZoomContainer;assembly=DIPS.Mobile.UI"
                 xmlns:local="clr-namespace:Components.ComponentsSamples.PanZoomContainer"
                 x:Class="Components.ComponentsSamples.PanZoomContainer.PanZoomContainerSample"
                 x:DataType="local:PanZoomContainerSampleViewModel"
                 Title="{x:Static localizedStrings:LocalizedStrings.ZoomContainer}">
    
    <dui:ContentPage.BindingContext>
        <local:PanZoomContainerSampleViewModel />
    </dui:ContentPage.BindingContext>
    
    <Grid RowDefinitions="Auto, *">
        
        <dui:Label Text="{x:Static localizedStrings:LocalizedStrings.PinchToZoom}"
                   Style="{dui:Styles Label=UI100}"
                   Margin="{dui:Sizes size_2}" />
        
        <panZoomContainer:PanZoomContainer Source="dotnet_bot.png"
                           Grid.Row="1" />
        
    </Grid>
</dui:ContentPage>
