<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:localizedStrings="clr-namespace:Components.Resources.LocalizedStrings"
                 x:Class="Components.ComponentsSamples.Buttons.ButtonsSamples"
                 x:Name="This"
                 Title="{x:Static localizedStrings:LocalizedStrings.Buttons}">
    
    <Grid RowDefinitions="Auto, *">

        <dui:VerticalStackLayout>
            <dui:Label Text="Buttons enabled"
                       Style="{dui:Styles Label=Header500}"
                       HorizontalOptions="End" />

            <Switch x:Name="Switch"
                    HorizontalOptions="End" />
        </dui:VerticalStackLayout>
        
        <dui:ScrollView Padding="{dui:Sizes size_4}"
                        Grid.Row="1">
            
        <dui:VerticalStackLayout>
            
            <dui:VerticalStackLayout>
                

                <dui:VerticalStackLayout Spacing="{dui:Sizes size_1}"
                                         HorizontalOptions="Start">
                    <dui:Label Text="Default"
                               Style="{dui:Styles Label=Header500}" />

                    <dui:Button Style="{dui:Styles Button=DefaultLarge}"
                                Text="Large"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=DefaultSmall}"
                                Text="Small"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=DefaultLarge}"
                                Text="Large"
                                ImageSource="{dui:Icons bell_line}"
                                ImageTintColor="{dui:Colors color_icon_default}"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=DefaultSmall}"
                                Text="Small"
                                ImageSource="{dui:Icons bell_line}"
                                ImageTintColor="{dui:Colors color_icon_default}"
                                ImagePlacement="Right"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=DefaultIconSmall}"
                                ImageSource="{dui:Icons bell_line}"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=DefaultIconLarge}"
                                ImageSource="{dui:Icons bell_line}"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                </dui:VerticalStackLayout>

                <dui:VerticalStackLayout Spacing="{dui:Sizes size_1}"
                                         HorizontalOptions="Start">

                    <dui:Label Text="Call To Action"
                               Style="{dui:Styles Label=Header500}" />
                    <dui:Button Style="{dui:Styles Button=CallToActionLarge}"
                                Text="Large"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=CallToActionSmall}"
                                Text="Small"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=CallToActionLarge}"
                                Text="Large"
                                ImageSource="{dui:Icons bell_line}"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                    <dui:Button Style="{dui:Styles Button=CallToActionSmall}"
                                Text="Small"
                                ImageSource="{dui:Icons bell_line}"
                                ImagePlacement="Right"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />
                    <dui:Button Style="{dui:Styles Button=CallToActionIconSmall}"
                                ImageSource="{dui:Icons bell_line}"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />
                    <dui:Button Style="{dui:Styles Button=CallToActionIconLarge}"
                                ImageSource="{dui:Icons bell_line}"
                                IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                </dui:VerticalStackLayout>
            </dui:VerticalStackLayout>


            <dui:VerticalStackLayout Spacing="{dui:Sizes size_1}"
                                     HorizontalOptions="Start">
                <dui:Label Text="Ghost"
                           Style="{dui:Styles Label=Header500}" />

                <dui:Button Style="{dui:Styles Button=GhostLarge}"
                            Text="Large"
                            FontSize="16"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                <dui:Button Style="{dui:Styles Button=GhostSmall}"
                            Text="Small"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                <dui:Button Style="{dui:Styles Button=GhostLarge}"
                            Text="Large"
                            ImageSource="{dui:Icons bell_line}"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                <dui:Button Style="{dui:Styles Button=GhostSmall}"
                            Text="Small"
                            ImageSource="{dui:Icons bell_line}"
                            ImagePlacement="Right"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                <dui:Button Style="{dui:Styles Button=GhostIconSmall}"
                            ImageSource="{dui:Icons bell_line}"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

                <dui:Button Style="{dui:Styles Button=GhostIconLarge}"
                            ImageSource="{dui:Icons bell_line}"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}" />

            </dui:VerticalStackLayout>

            <dui:VerticalStackLayout HorizontalOptions="Start"
                                     Spacing="{dui:Sizes size_1}">
                
                <dui:Label Text="Floating"
                           Style="{dui:Styles Label=Header500}"/>
                
                <dui:Button Style="{dui:Styles Button=DefaultFloatingLarge}"
                            Text="I'm floating"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}"/>
                
                <dui:Button Style="{dui:Styles Button=DefaultFloatingIconLarge}"
                            ImageSource="{dui:Icons bell_line}"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}"/>
                
            </dui:VerticalStackLayout>
            
            <dui:VerticalStackLayout HorizontalOptions="Start"
                                     Spacing="{dui:Sizes size_1}">
                
                <dui:Label Text="Close icon small"
                           Style="{dui:Styles Label=Header500}"/>
                
                <dui:Button Style="{dui:Styles Button=CloseIconSmall}"
                            ImageSource="{dui:Icons bell_line}"
                            IsEnabled="{Binding Source={x:Reference Switch}, Path=IsToggled, Converter={dui:InvertedBoolConverter}}"/>
                
            </dui:VerticalStackLayout>


        </dui:VerticalStackLayout>
    </dui:ScrollView>

    </Grid>
</dui:ContentPage>