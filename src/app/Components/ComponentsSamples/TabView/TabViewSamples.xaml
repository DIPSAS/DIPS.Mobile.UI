<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:tabView="clr-namespace:Components.ComponentsSamples.TabView"
                 xmlns:tabs="clr-namespace:DIPS.Mobile.UI.Components.Tabs;assembly=DIPS.Mobile.UI"
                 x:Class="Components.ComponentsSamples.TabView.TabViewSamples"
                 x:DataType="{x:Type tabView:TabsSamplesViewModel}"
                 BackgroundColor="{dui:Colors color_system_white}"
                 Padding="{dui:Sizes size_2}">
    
    <dui:ContentPage.BindingContext>
        <tabView:TabsSamplesViewModel />
    </dui:ContentPage.BindingContext>
    
    <dui:VerticalStackLayout>
        <dui:Label Text="Tab View"
                   Style="{dui:Styles Label=SectionHeader}" />
        
        <dui:TabView>
            <dui:Tab Title="Tab 1" Counter="3" />    
            <dui:Tab Title="Tab 2" />    
            <dui:Tab Title="Tab 3" Counter="2"/>    
        </dui:TabView>
    </dui:VerticalStackLayout>

</dui:ContentPage>