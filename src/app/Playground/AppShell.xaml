<?xml version="1.0" encoding="UTF-8" ?>
<dui:Shell
    x:Class="Playground.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
    xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
    xmlns:sanderSamples="clr-namespace:Playground.SanderSamples"
    xmlns:dui="http://dips.com/mobile.ui"
    xmlns:eirikSamples="clr-namespace:Playground.EirikSamples"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Vetle">
            <ShellContent
                Title="Vetle"
                ContentTemplate="{DataTemplate vetleSamples:VetlePage}"
                Route="Vetle" />
        </Tab>
        <Tab Title="Håvard">
            <ShellContent
                Title="Håvard"
                ContentTemplate="{DataTemplate håvardSamples:HåvardPage}"
                Route="Håvard" />
        </Tab>
        <Tab Title="Sander">
            <ShellContent
                Title="Sander"
                ContentTemplate="{DataTemplate sanderSamples:SanderPage}"
                Route="Sander" />
        </Tab>
        <Tab Title="Eirik">
            <ShellContent
                Title="Eirik"
                ContentTemplate="{DataTemplate eirikSamples:EirikPage}"
                Route="Eirik"/>
        </Tab>
    </TabBar>
</dui:Shell>
