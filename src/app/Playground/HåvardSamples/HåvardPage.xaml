<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
                 x:Class="Playground.HåvardSamples.HåvardPage"
                 Padding="0">
    <dui:ContentPage.BindingContext>
        <håvardSamples:HåvardPageViewModel />
    </dui:ContentPage.BindingContext>
    <VerticalStackLayout>
        <Switch x:Name="Switch"
                HorizontalOptions="Start" />
        <dui:Checkmark HorizontalOptions="Start"
                       IsSelected="{Binding Source={x:Reference Switch}, Path=IsToggled}" />
        <dui:RadioButton HorizontalOptions="Start"
                         IsSelected="{Binding Source={x:Reference Switch}, Path=IsToggled}" />
    </VerticalStackLayout>
</dui:ContentPage>