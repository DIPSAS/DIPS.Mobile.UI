<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
                 xmlns:system="clr-namespace:System;assembly=System.Runtime"
                 xmlns:animations="clr-namespace:DIPS.Mobile.UI.Components.Animations;assembly=DIPS.Mobile.UI"
                 x:Class="Playground.HåvardSamples.HåvardPage"
                 Padding="0">
    <dui:ContentPage.BindingContext>
        <håvardSamples:HåvardPageViewModel />
    </dui:ContentPage.BindingContext>

    <VerticalStackLayout>
        <Switch x:Name="Switch1" />
        <Switch x:Name="Switch2" />
        
        
        <dui:FilledCheckBox IsProgressing="{Binding Source={x:Reference Switch2}, Path=IsToggled}"
                            IsChecked="{Binding Source={x:Reference Switch1},Path=IsToggled}" />
    </VerticalStackLayout>
