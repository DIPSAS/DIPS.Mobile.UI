<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
                 xmlns:controls="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
                 x:Class="Playground.HåvardSamples.HåvardPage"
                 Padding="0">
    <dui:ContentPage.BindingContext>
        <håvardSamples:HåvardPageViewModel />
    </dui:ContentPage.BindingContext>
    <!-- Create document -->
    <VerticalStackLayout>
        <dui:Switch x:Name="Switch" />
        <FlexLayout Wrap="Wrap"
                    AlignContent="Start"
                    AlignItems="Start">
            <!-- Create document -->
            <dui:Button ImageSource="{dui:Icons alert_fill}"
                        Text="test"
                        Style="{dui:Styles Button=PrimaryRoundedSmall}" />

            <dui:Button ImageSource="{dui:Icons alert_fill}"
                        Style="{dui:Styles Button=PrimaryRoundedLarge}"
                        IsVisible="{Binding Source={x:Reference Switch}, Path=IsToggled}" />
        </FlexLayout>
    </VerticalStackLayout>
</dui:ContentPage>