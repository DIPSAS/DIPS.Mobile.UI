<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
                 xmlns:controls="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
                 x:Class="Playground.HåvardSamples.HåvardPage"
                 ShouldHideFloatingNavigationMenuButton="True"
                 Padding="0">
    <VerticalStackLayout>
        <dui:Chip x:Name="IsSavingChip" />
        <Entry x:Name="SavingText"
               Text="Testing" />
        <dui:SaveView IsSaving="{Binding Source={x:Reference IsSavingChip}, Path=IsToggled}"
                      SavingText="{Binding Source={x:Reference SavingText}, Path=Text}" />
    </VerticalStackLayout>
</dui:ContentPage>