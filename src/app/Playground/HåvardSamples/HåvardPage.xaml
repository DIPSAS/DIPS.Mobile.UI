<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
                 xmlns:controls="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
                 x:Class="Playground.HåvardSamples.HåvardPage"
                 Padding="0"
                 BackgroundColor="Black">
    <dui:ContentPage.BindingContext>
        <håvardSamples:HåvardPageViewModel />
    </dui:ContentPage.BindingContext>
    <Border HeightRequest="{dui:Sizes size_15}"
            WidthRequest="{dui:Sizes size_15}"
            Padding="10"
            Stroke="White"
            StrokeThickness="3"
            BackgroundColor="{dui:Colors color_obsolete_accent}"
            dui:Touch.Command="{Binding Source={RelativeSource AncestorType={x:Type dui:ContentPage}}, Path=SearchCommand}">
        <Border.StrokeShape>
            <Ellipse />
        </Border.StrokeShape>

        <controls:SKLottieView x:Name="MenuLottieView"
                               Source="{dui:Animations menu}"
                               IsAnimationEnabled="False"
                               RepeatMode="Reverse"
                               RepeatCount="-1"/>
    </Border>
    <!-- <dui:ItemPicker ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}"/> -->
</dui:ContentPage>