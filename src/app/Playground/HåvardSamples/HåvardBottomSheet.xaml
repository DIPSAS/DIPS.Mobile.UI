<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="Playground.HåvardSamples.HåvardBottomSheet"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:håvardSamples="clr-namespace:Playground.HåvardSamples"
                 OnBackButtonPressedCommand="{Binding Source={RelativeSource Self}, Path=CloseItCommand}">
    <dui:BottomSheet.BindingContext>
        <håvardSamples:HåvardPageViewModel />
    </dui:BottomSheet.BindingContext>
    <dui:BottomSheet.BottombarButtons>
        <dui:Button Text="Go to"
                    Command="{Binding Test}" />
    </dui:BottomSheet.BottombarButtons>
    <dui:BottomSheet.ToolbarItems>
        <ToolbarItem Text="Close"
                     Clicked="MenuItem_OnClicked" />
    </dui:BottomSheet.ToolbarItems>
    <dui:MultiLineInputField HeaderText="Testing"
                             SaveCommand="{Binding Command}"
                             CancelCommand="{Binding Command}" />
</dui:BottomSheet>