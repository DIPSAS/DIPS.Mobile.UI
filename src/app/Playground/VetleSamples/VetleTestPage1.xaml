<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
             xmlns:sorting="clr-namespace:DIPS.Mobile.UI.Components.Sorting;assembly=DIPS.Mobile.UI"
             x:Class="Playground.VetleSamples.VetleTestPage1"
             x:Name="CodeBehind"
             Title="Hei">
    
    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>
    
    <dui:ContentPage.ToolbarItems>
        <ToolbarItem Text="Hei" />
    </dui:ContentPage.ToolbarItems>
    
    <Grid RowDefinitions="Auto, *">
    
    
        <sorting:SortControl ItemsSource="{Binding SortOptions}"
                             ItemDisplayProperty="Text"
                             InitialSelectedItem="{Binding DefaultSelectedItem}"
                             SelectedItemCommand="{Binding SortingDoneCommand}" />
        
        <dui:CollectionView ItemsSource="{Binding TestStrings}"
                            Grid.Row="1">
                
            <dui:CollectionView.ItemTemplate>
                <DataTemplate>
                    <dui:Label Text="{Binding .}" />
                </DataTemplate>
            </dui:CollectionView.ItemTemplate>
            
        </dui:CollectionView>
    </Grid>

</dui:ContentPage>