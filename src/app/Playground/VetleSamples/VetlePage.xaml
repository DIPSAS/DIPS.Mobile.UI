<?xml version="1.0" encoding="utf-8"?>

<dui:ContentSavePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:dui="http://dips.com/mobile.ui"
                     xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                     x:Class="Playground.VetleSamples.VetlePage"
                     x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                     BackgroundColor="Gray"
                     IsSaving="{Binding IsSaving}"
                     SavingText="Saving"
                     x:Name="This">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <dui:ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{dui:Icons bell_fill}" Command="{Binding CompletedCommand}" />
        <ToolbarItem Text="Test" />
    </dui:ContentPage.ToolbarItems>
    
    <dui:VerticalStackLayout Spacing="0">
        
        <dui:ListItem Title="Test!!"
                      HasBottomDivider="True" />
        <dui:ListItem Title="Test!!"
                      HasBottomDivider="True" />
        <dui:ListItem Title="Test!!"
                      HasBottomDivider="True" />
        <dui:ListItem Title="Test!!" />
        <dui:ListItem Title="Test!!" />
        <dui:ListItem Title="Test!!"
                      HasBottomDivider="True"
                      CornerRadius="12">
            
            <dui:ListItem.DividersOptions>
                <dui:DividersOptions BottomDividerMargin="50, 0, 0, 0" />
            </dui:ListItem.DividersOptions>
            
        </dui:ListItem>
        <dui:ListItem Title="Test!!" CornerRadius="12" />
        
        <BoxView HeightRequest="100"></BoxView>
        
        <Border Padding="0" BackgroundColor="White">
            <Label Text="test"></Label>
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" StrokeThickness="0"></RoundRectangle>
            </Border.StrokeShape>
        </Border>
        
        <Border BackgroundColor="White" Padding="0">
            <Label Text="test"></Label>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" StrokeThickness="0"></RoundRectangle>
            </Border.StrokeShape>
        </Border>
    </dui:VerticalStackLayout>


</dui:ContentSavePage>