<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:system="clr-namespace:System;assembly=System.Runtime"
                 x:Class="Playground.VetleSamples.VetlePage"
                 Padding="20"
                 x:Name="This"
                 HideSoftInputOnTapped="True">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <dui:ContentPage.Resources>
        <vetleSamples:TemplateSelector x:Key="TemplateSelector" />
    </dui:ContentPage.Resources>

    <VerticalStackLayout HorizontalOptions="Start"
                         Spacing="20">
        <dui:Label Text="Small"></dui:Label>
        <dui:Button Style="{dui:Styles Button=SecondaryIconButtonSmall}"
                    ImageSource="{dui:Icons close_line}"
                    />
        
        <dui:Divider />
        
        <dui:Label Text="Large"></dui:Label>
        <dui:Button Style="{dui:Styles Button=SecondaryIconButtonLarge}"
                    ImageSource="{dui:Icons close_line}" />
        
        <dui:Divider BackgroundColor="{dui:Colors color_stroke_default}"/>
        
        <dui:Label Text="Figma"></dui:Label>
        <dui:Button Style="{dui:Styles Button=SecondaryIconButtonLarge}"
                    ImageSource="{dui:Icons close_line}"
                    WidthRequest="24"
                    HeightRequest="24" />
        
        <dui:Chip Title="Hei" IsCloseable="True"
                  IsToggleable="True"/>
        <dui:SearchBar />
        
        <dui:Switch />
    </VerticalStackLayout>

</dui:ContentPage>