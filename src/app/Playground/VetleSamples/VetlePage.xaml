<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 x:Class="Playground.VetleSamples.VetlePage"
                 x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                 Padding="20"
                 x:Name="This">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <Grid>
    <dui:CollectionView ItemsSource="{Binding TestStrings}"
                        VerticalOptions="Start">
        <dui:CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical"
                               ItemSpacing="10" />
        </dui:CollectionView.ItemsLayout>
        <dui:CollectionView.ItemTemplate>
            <DataTemplate>
                
                <dui:Chip IsCloseable="True"
                          Title="{Binding .}"
                          WidthRequest="50"
                          CloseCommand="{Binding Source={RelativeSource AncestorType={x:Type vetleSamples:VetlePageViewModel}}, Path=RemoveStringCommand}"
                          CloseCommandParameter="{Binding .}"
                          HeightRequest="50"
                          VerticalOptions="Start" />
            </DataTemplate>
        </dui:CollectionView.ItemTemplate>

    </dui:CollectionView>

        <dui:Button ImageSource="{dui:Icons arrow_back_line}"
                    Style="{dui:Styles Button=PrimaryIconButtonLarge}"/>
    </Grid>
</dui:ContentPage>