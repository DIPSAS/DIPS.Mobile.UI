<?xml version="1.0" encoding="utf-8"?>

<dui:ContentSavePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:dui="http://dips.com/mobile.ui"
                     xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                     x:Class="Playground.VetleSamples.VetlePage"
                     x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                     BackgroundColor="White"
                     IsSaving="{Binding IsSaving}"
                     SavingText="Saving"
                     x:Name="This">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <dui:ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{dui:Icons bell_fill}" Command="{Binding CompletedCommand}" />
        <ToolbarItem Text="Test" />
    </dui:ContentPage.ToolbarItems>

    <dui:VerticalStackLayout Padding="20">

        <dui:SegmentedControl SelectionMode="Multi">
            <x:Array Type="{x:Type x:String}">
                <x:String>First</x:String>
                <x:String>Second</x:String>
                <x:String>Third</x:String>
            </x:Array>
        </dui:SegmentedControl>
        
        <Switch x:Name="Switch" Toggled="Switch_OnToggled" />
        
        <Border BackgroundColor="Red"
                HorizontalOptions="Center"
                
                VerticalOptions="Center"
                HeightRequest="{dui:Sizes size_10}">
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="{dui:Sizes size_2}"></RoundRectangle>
            </Border.StrokeShape>
            
            <HorizontalStackLayout 
                Spacing="{dui:Sizes size_1}"
                  Padding="{dui:Thickness Left=size_5, Top=size_2, Right=size_5, Bottom=size_2}"
                  VerticalOptions="Center"
                  x:Name="Grid">
                <dui:Image BackgroundColor="Blue" WidthRequest="{dui:Sizes size_3}" IsVisible="{Binding Source={x:Reference Switch}, Path=IsToggled}"
                                                                                      HeightRequest="{dui:Sizes size_3}"
                                                                                      Source="{dui:Icons check_line}"/>
                <Label Grid.Column="1" BackgroundColor="Green" Text="Third" VerticalTextAlignment="Center" FontSize="14" />
            </HorizontalStackLayout>
            
        </Border>
        
        <Border BackgroundColor="Green"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="{dui:Sizes size_10}">
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="{dui:Sizes size_2}"></RoundRectangle>
            </Border.StrokeShape>
            
            <HorizontalStackLayout 
                  VerticalOptions="Center"
                  Padding="{dui:Thickness Left=size_5, Top=size_2, Right=size_5, Bottom=size_2}">
              
                <Label Text="Third" Grid.Column="1" VerticalTextAlignment="Center" FontSize="14" />
            </HorizontalStackLayout>
            
        </Border>


    </dui:VerticalStackLayout>


</dui:ContentSavePage>