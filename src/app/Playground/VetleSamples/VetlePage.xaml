<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
             xmlns:icon="clr-namespace:DIPS.Mobile.UI.Components.ListItems.Options.Icon;assembly=DIPS.Mobile.UI"
             xmlns:title="clr-namespace:DIPS.Mobile.UI.Components.ListItems.Options.Title;assembly=DIPS.Mobile.UI"
             xmlns:inLineContent="clr-namespace:DIPS.Mobile.UI.Components.ListItems.Options.InLineContent;assembly=DIPS.Mobile.UI"
             xmlns:subtitle="clr-namespace:DIPS.Mobile.UI.Components.ListItems.Options.Subtitle;assembly=DIPS.Mobile.UI"
             xmlns:extendedListItems="clr-namespace:DIPS.Mobile.UI.Components.ListItems.ExtendedListItems;assembly=DIPS.Mobile.UI"
             x:Class="Playground.VetleSamples.VetlePage"
             x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
             Padding="15, 20"
             Scale="1">
    
    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>
    
    <dui:ContentPage.ToolbarItems>
        <ToolbarItem></ToolbarItem>
    </dui:ContentPage.ToolbarItems>
        
                <dui:VerticalStackLayout Spacing="0">
                   
                    <dui:ListItem Title="Test" />
                    <dui:ListItem Title="Test" HasTopDivider="True"
                                  HasBottomDivider="True"/>
                    <dui:ListItem Title="Test" />
                    
                    <dui:LoadableListItem Title="Test" InLineContent="Testeren" 
                                          IsBusy="{Binding IsProgressing}"
                                          FadeContentIn="True"/>
                    
                </dui:VerticalStackLayout>

</dui:ContentPage>