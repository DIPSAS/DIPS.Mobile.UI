<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 x:Class="Playground.VetleSamples.VetlePage"
                 x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                 Padding="20"
                 x:Name="This"
                 HideSoftInputOnTapped="True">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <Grid>
       
        <!-- Image exists in DIPS.Mobile.Essentials Resources\Images -->
            <!-- Background image-->
            <dui:Image Aspect="AspectFill"
                       BackgroundColor="{dui:Colors color_primary_90}"
                       Source="{dui:Icons alert_line}"
                       InputTransparent="True" />
            <Grid Loaded="VisualElement_OnLoaded">
                <Grid RowDefinitions="Auto,Auto,*,Auto,Auto"
                      RowSpacing="0"
                      Padding="{dui:Thickness Left=size_4, Right=size_4, Top=size_4}">
                    <!-- Info icon -->
                    <!-- The outer grid is here to give the user a better experience when tapping it -->
                    <!-- The negative margin is here to make sure its aligned with the design, while respecting the padding of the entire page -->
                    <dui:Button Grid.Row="0"
                                Style="{dui:Styles Button=PrimaryIconButtonLarge}"
                                BackgroundColor="Transparent"
                                ImageSource="{dui:Icons information_line}"
                                Command="{Binding Navigate}"
                                HorizontalOptions="End"
                                AdditionalHitBoxSize="{dui:Sizes size_5}"
                                SemanticProperties.Description="Lol" />
    
                    <!-- Environment switcher -->
                    <dui:Button Grid.Row="0"
                                IsEnabled="False"
                                IsVisible="True"
                                Text="Hhe"
                                BackgroundColor="{dui:Colors color_secondary_30}"
                                ImageSource="{dui:Icons server_line}"
                                TextColor="{dui:Colors color_neutral_90}"
                                Style="{dui:Styles Button=PrimarySmall}"
                                Command="{Binding CancelCommand}"
                                HorizontalOptions="Start"
                                CornerRadius="{dui:Sizes size_3}"
                                ImageTintColor="{dui:Colors color_neutral_90}"
                                SemanticProperties.Description="ya"
                                SemanticProperties.Hint="lol" />
    
                    <!-- The consumers logo -->
                    <dui:Image Grid.Row="1"
                               Margin="{dui:Thickness Top=size_22}"
                               Aspect="AspectFit"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               HeightRequest="175"
                               WidthRequest="175"
                               Source="logo.png" />
    
                    <!-- Busy spinner and cancel button -->
                    <Grid Grid.Row="2"
                          RowDefinitions="Auto, Auto, Auto"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          RowSpacing="10"
                          Opacity="{Binding IsChecked, Converter={dui:BoolToObjectConverter TrueObject=1, FalseObject=0}}">
                        <dui:Label Grid.Row="0" 
                                Text="messagw"
                                   HorizontalOptions="Center"
                                   TextColor="{dui:Colors color_system_white}" />
                        <dui:ActivityIndicator Grid.Row="1"
                                               HorizontalOptions="Center"
                                               VerticalOptions="End"
                                               IsRunning="True"
                                               Color="{dui:Colors color_system_white}"
                                               Margin="{dui:Thickness Top=size_5, Bottom=size_5}"/>
                        <dui:Button Grid.Row="2"
                                    BackgroundColor="Transparent"
                                    Text="cancel"
                                    Command="{Binding CancelCommand}"
                                    AdditionalHitBoxSize="15,15"
                                    TextColor="{dui:Colors color_system_white}" />
                    </Grid>
    
                    <!-- Sign in button -->
                    <dui:Button Grid.Row="3"
                                Style="{dui:Styles Button=SecondaryLarge}"
                                IsEnabled="True"
                                Text="sign in"
                                Command="{Binding CancelCommand}"
                                Margin="{dui:Thickness Bottom=size_2}"
                                x:Name="SignInButton"
                                Loaded="SetSemanticFocus" />
                    <dui:Label Grid.Row="4"
                               Margin="{dui:Thickness Top=size_8, Bottom=size_4}"
                               TextColor="{dui:Colors color_system_white}"
                               HorizontalOptions="Center"
                               Text="he"/>
                </Grid>
            </Grid>
         <dui:Button Command="{Binding Navigate}"
                            Text="hello"></dui:Button>
        </Grid>
    
    
</dui:ContentPage>