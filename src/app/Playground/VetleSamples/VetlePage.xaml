<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
             xmlns:saveView="clr-namespace:DIPS.Mobile.UI.Components.Saving.SaveView;assembly=DIPS.Mobile.UI"
             x:Class="Playground.VetleSamples.VetlePage"
             x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
             Padding="15, 20"
             Scale="1">
    
    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>
    
    <dui:ContentPage.ToolbarItems>
        <ToolbarItem></ToolbarItem>
    </dui:ContentPage.ToolbarItems>
        
                <dui:VerticalStackLayout>
                   
                    <dui:LoadableListItem Title="Test">
                        
                      <dui:LoadableListItem.StaticContentItem>
                        <Image Source="{dui:Icons arrow_right_s_line}"  />
                      </dui:LoadableListItem.StaticContentItem>
                        
                        <FlexLayout Wrap="Wrap" VerticalOptions="Center">
                            
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            
                        </FlexLayout>
                    </dui:LoadableListItem>
                    
                    <dui:ListItem Title="Test">
                        
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto" BackgroundColor="Black">
                            <FlexLayout Wrap="Wrap">
                            
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                                <Border BackgroundColor="Red" WidthRequest="50" HeightRequest="50" />
                            
                            </FlexLayout>
                            <Image Source="{dui:Icons arrow_right_s_line}" Grid.Column="1" />

                        </Grid>
                    </dui:ListItem>

                
                </dui:VerticalStackLayout>

</dui:ContentPage>