<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:system="clr-namespace:System;assembly=System.Runtime"
                 x:Class="Playground.VetleSamples.VetlePage"
                 x:Name="This"
                 HideSoftInputOnTapped="True"
                 BackgroundColor="{dui:Colors color_neutral_10}">
    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <dui:ContentPage.Resources>
        <vetleSamples:TemplateSelector x:Key="TemplateSelector" />
    </dui:ContentPage.Resources>

    <ScrollView Padding="{dui:Thickness Left=size_3, Right=size_3, Top=size_4}">
    <dui:VerticalStackLayout BindableLayout.ItemsSource="{Binding TestObject2s}"
                             dui:Layout.AutoHideLastDivider="True"
                             dui:Layout.AutoCornerRadius="True"
                             Spacing="0"
                             VerticalOptions="Start">
        
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <dui:ListItem Title="{Binding Name}" />
                    <dui:Divider VerticalOptions="End" />
                </Grid>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
        
    </dui:VerticalStackLayout>
    </ScrollView>

</dui:ContentPage>