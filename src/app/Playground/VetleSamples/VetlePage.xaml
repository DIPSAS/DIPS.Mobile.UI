<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 x:Class="Playground.VetleSamples.VetlePage"
                 x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                 Padding="20"
                 x:Name="This"
                 HideSoftInputOnTapped="True">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <dui:ContentPage.ToolbarItems>
        
        <dui:ContextMenuToolbarItem Text="Context">
            <dui:ContextMenuToolbarItem.ContextMenu>
                <dui:ContextMenu Title="Hei" />
            </dui:ContextMenuToolbarItem.ContextMenu>
        </dui:ContextMenuToolbarItem>


    </dui:ContentPage.ToolbarItems>
   
    <!--<ContentView>
    <dui:CollectionView ItemsSource="{Binding TestStrings}">
        <dui:CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding .}" />
            </DataTemplate>
        </dui:CollectionView.ItemTemplate>
    </dui:CollectionView>
    </ContentView>-->
    
    <dui:ContentControl SelectorItem="{Binding Disabled}">
        <dui:ContentControl.TemplateSelector>
            <dui:BooleanDataTemplateSelector>
                <dui:BooleanDataTemplateSelector.TrueTemplate>
                    <DataTemplate>
                        <dui:CollectionView ItemsSource="{Binding TestStrings}">
                            <dui:CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Label Text="{Binding .}" />
                                </DataTemplate>
                            </dui:CollectionView.ItemTemplate>
                        </dui:CollectionView>
                    </DataTemplate>
                </dui:BooleanDataTemplateSelector.TrueTemplate>
                
                <dui:BooleanDataTemplateSelector.FalseTemplate>
                    <DataTemplate>
                        <dui:ActivityIndicator IsRunning="True"/>
                    </DataTemplate>
                </dui:BooleanDataTemplateSelector.FalseTemplate>
                
            </dui:BooleanDataTemplateSelector>
        </dui:ContentControl.TemplateSelector>
        
    </dui:ContentControl>


   
    
</dui:ContentPage>