<?xml version="1.0" encoding="utf-8"?>

<dui:ContentSavePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:dui="http://dips.com/mobile.ui"
                     xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                     x:Class="Playground.VetleSamples.VetlePage"
                     x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                     BackgroundColor="White"
                     IsSaving="{Binding IsSaving}"
                     SavingText="Saving"
                     x:Name="This">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <dui:ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{dui:Icons bell_fill}" />
        <ToolbarItem Text="Test" />
    </dui:ContentPage.ToolbarItems>

    <dui:VerticalStackLayout Padding="20">

        <dui:ListItem IsDebugMode="True"
                      Title="hei"
                      Icon="{dui:Icons arrow_down_thick_line_fill}"
                      Command="{Binding Navigate}">
            
            <dui:ListItem.DebuggingOptions>
                <dui:DebuggingOptions />
            </dui:ListItem.DebuggingOptions>
            
            <dui:ListItem.InLineContentOptions>
                <dui:InLineContentOptions HorizontalOptions="Fill"
                                          VerticalOptions="Fill"></dui:InLineContentOptions>
            </dui:ListItem.InLineContentOptions>
            
            <dui:Label Text="hew" HorizontalOptions="Fill"></dui:Label>
            
            <dui:ListItem.UnderlyingContent>
                <Label Text="hei"  />
            </dui:ListItem.UnderlyingContent>
            
            
            
        </dui:ListItem>


    </dui:VerticalStackLayout>


</dui:ContentSavePage>