<?xml
    version="1.0"
    encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:iOs="clr-namespace:DIPS.Mobile.UI.Components.Pickers.DatePicker.Inline.iOS;assembly=DIPS.Mobile.UI"
                 x:Class="Playground.VetleSamples.VetlePage"
                 x:DataType="{x:Type vetleSamples:VetlePageViewModel}"
                 Padding="20"
                 x:Name="This">

    <dui:ContentPage.BindingContext>
        <vetleSamples:VetlePageViewModel />
    </dui:ContentPage.BindingContext>

    <VerticalStackLayout>
        
        <Grid ColumnDefinitions="*, 1.25*">
            <dui:DateAndTimePicker />
        </Grid>
        <dui:DatePicker />
        <dui:TimePicker />
        <dui:DateAndTimePicker />
    </VerticalStackLayout>
    
</dui:ContentPage>