<?xml version="1.0" encoding="utf-8"?>

<dui:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dui="http://dips.com/mobile.ui"
             xmlns:toolbarConfiguration="clr-namespace:DIPS.Mobile.UI.Components.BottomSheets.ToolbarConfiguration;assembly=DIPS.Mobile.UI"
             xmlns:vetleSamples="clr-namespace:Playground.VetleSamples"
             x:Class="Playground.VetleSamples.BottomSheetWithToolbar"
             x:DataType="{x:Type vetleSamples:BottomSheetWithToolbarViewModel}">
    <dui:BottomSheet.BindingContext>
        <vetleSamples:BottomSheetWithToolbarViewModel />
    </dui:BottomSheet.BindingContext>
    
    <dui:BottomSheet.ToolbarConfiguration>
        <toolbarConfiguration:BottomSheetToolbarConfiguration Title="Test2">
            <toolbarConfiguration:BottomSheetToolbarConfiguration.RightToolbarItems>
                <toolbarConfiguration:BottomSheetActionButton Title="Done" 
                                                              Command="{Binding TestCommand}" />
                <toolbarConfiguration:BottomSheetActionButton Title="Done2" 
                                                              Command="{Binding TestCommand}" />
            </toolbarConfiguration:BottomSheetToolbarConfiguration.RightToolbarItems>    
        </toolbarConfiguration:BottomSheetToolbarConfiguration>
    </dui:BottomSheet.ToolbarConfiguration>
    
        <dui:VerticalStackLayout>
        <dui:Label
            Text="This is a bottom sheet. The content of the sheet has random components inside of it to test the behavior of them inside a bottom sheet" 
            Padding="{dui:Thickness size_4}"/>
        <dui:ListItem Title="This is a chip:"
                      Margin="{dui:Thickness Top=size_2}">
            <dui:Chip Title="A chip" />
        </dui:ListItem>
        <dui:ListItem Title="Date">
            <dui:DatePicker />
        </dui:ListItem>
        <dui:ListItem Title="Time">
            <dui:TimePicker />
        </dui:ListItem>
        <dui:ListItem Title="Date / time">
            <dui:DateAndTimePicker />
        </dui:ListItem>
    </dui:VerticalStackLayout>
    
</dui:BottomSheet>