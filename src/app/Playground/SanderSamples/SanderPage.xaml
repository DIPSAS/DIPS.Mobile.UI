<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:sanderSamples="clr-namespace:Playground.SanderSamples"
                 x:Class="Playground.SanderSamples.SanderPage">
    <dui:ContentPage.BindingContext>
        <sanderSamples:SanderPageViewModel />
    </dui:ContentPage.BindingContext>

    <Grid RowSpacing="{dui:Sizes size_2}"
          Padding="{dui:Thickness Left=size_2, Right=size_2}"
          RowDefinitions="Auto, Auto">

        <dui:Button Text="Press"
                    Command="{Binding TestCommand}"/>
        
        <dui:SkeletonView Grid.Row="1" 
                          FadeTime="500"
                          IsLoading="{Binding IsToggled}"
                          SkeletonColor="#AAEAE7E9">
            <dui:SkeletonView.Shapes>
                <dui:SkeletonShape Width="200"
                                   Height="{dui:Sizes size_4}"
                                   VerticalAlignment="Center"
                                   CornerRadius="{dui:Sizes size_1}" />
            </dui:SkeletonView.Shapes>
            
            <dui:Label Text="{Binding TestText}"/>
        </dui:SkeletonView>
    </Grid>
</dui:ContentPage>