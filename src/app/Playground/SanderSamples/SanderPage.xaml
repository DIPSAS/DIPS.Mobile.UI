<?xml version="1.0" encoding="utf-8"?>

<dui:ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:dui="http://dips.com/mobile.ui"
                 xmlns:sanderSamples="clr-namespace:Playground.SanderSamples"
                 x:Class="Playground.SanderSamples.SanderPage">
    <dui:ContentPage.BindingContext>
        <sanderSamples:SanderPageViewModel />
    </dui:ContentPage.BindingContext>

    <Grid Padding="{dui:Padding UniformSize=size_2}">
        <dui:LoadableListItem Title="This is a test"
                              IsBusy="{Binding IsBusy}"
                              Command="{Binding NavigateCommand}">
            <dui:LoadableListItem.ContextMenu>
                <dui:ContextMenu>
                    <dui:ContextMenuItem Title="Also a test!" />
                </dui:ContextMenu>
            </dui:LoadableListItem.ContextMenu>
        </dui:LoadableListItem>

    </Grid>
</dui:ContentPage>